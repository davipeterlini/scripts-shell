{
  "title": "Use fn to switch input source",
  "rules": [
    {
      "description": "Change input source when pressing fn (using Control+Space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    }
  ]
}