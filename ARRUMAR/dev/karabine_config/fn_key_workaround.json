{
  "title": "Fn key workaround for external keyboards",
  "rules": [
    {
      "description": "Map function keys to switch input source (F14 to Control+Space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f14"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map Print Screen key to switch input source (for Windows keyboards)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "print_screen"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map Insert key to switch input source (for Windows keyboards)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "insert"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    },
    {
      "description": "Map Application key to switch input source (for Windows keyboards)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "application"
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    }
  ]
}