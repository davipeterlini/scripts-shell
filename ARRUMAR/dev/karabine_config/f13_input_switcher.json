{
  "title": "Use F13 to switch input source (alternative for external keyboards)",
  "rules": [
    {
      "description": "Change input source when pressing F13 (using Control+Space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f13",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
    }
  ]
}