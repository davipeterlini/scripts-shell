{
  "title": "Use any key to switch input source (choose your preferred key)",
  "rules": [
    {
      "description": "Change input source when pressing Right Command (using Control+Space)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["left_control"]
            }
          ]
        }
      ]
