{
  "title": "Shift + ~ to double quotes (Brazilian keyboards)",
  "rules": [
    {
      "description": "Change shift + ~ to double quotes for Brazilian ABNT2 and US layouts",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "grave_accent_and_tilde",
            "modifiers": {
              "mandatory": ["shift"]
            }
          },
          "to": [
            {
              "key_code": "quote",
              "modifiers": ["shift"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "quote",
              "modifiers": ["shift"]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "quote",
              "modifiers": ["shift"]
            }
          ]
        }
      ]
    }
  ]
}