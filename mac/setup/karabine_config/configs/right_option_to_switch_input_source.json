{
  "title": "Right Option key to switch input source",
  "rules": [
    {
      "description": "Change right option key to switch input source",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": ["control"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": ["control"]
            }
          ]
        }
      ]
    }
  ]
}