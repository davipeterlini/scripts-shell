{
  "title": "Direct input source switching (without using Control+Space)",
  "rules": [
    {
      "description": "Right Command switches directly between input sources",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "to_if_held_down": [
            {
              "select_input_source": {
                "language": "pt"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "pt"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "pt"
              }
            }
          ],
          "to_if_held_down": [
            {
              "select_input_source": {
                "language": "en"
              }
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "en"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}