/**
 * Capabilities Comparison Tool with Progress Tracking
 * 
 * This script compares the LLM-Capabilities sheet (generated by search_llm_capabilities.gs)
 * with the IDE-Capabilities sheet to identify any discrepancies in capability status.
 * It includes progress tracking to monitor the execution.
 */

// Configuration constants - renamed to avoid conflict with other scripts
const COMPARE_CONFIG = {
  SOURCE_SHEET_NAME: "LLM-Capabilities",
  TARGET_SHEET_NAME: "IDE-Capabilities",
  REPORT_SHEET_NAME: "Comparison-Report",
  PROGRESS_SHEET_NAME: "Progress-Tracker",
  STATUS: {
    ENABLE: "Enable",
    DISABLE: "Disable"
  },
  COLORS: {
    TITLE_BG: "#000000",
    TITLE_TEXT: "#FFFFFF",
    HEADER_BG: "#D3D3D3",
    ERROR_BG: "#FFCCCB",
    SUCCESS_BG: "#90EE90",
    ENABLE_BG: "#90EE90",  // Verde para Enable
    DISABLE_BG: "#FFCCCB",  // Vermelho para Disable
    PROGRESS_BG: "#E6F2FF"  // Azul claro para progresso
  }
};

/**
 * Creates custom menu when spreadsheet is opened
 */
function onOpen() {
  const ui = SpreadsheetApp.getUi();
  ui.createMenu('Comparar Planilhas')
      .addItem('Comparar Status de Capabilities', 'compareCapabilities')
      .addToUi();
}

/**
 * Main function to compare capabilities between sheets
 */
function compareCapabilities() {
  try {
    const spreadsheet = SpreadsheetApp.getActiveSpreadsheet();
    
    // Create progress tracker
    const progressTracker = _createProgressTracker(spreadsheet);
    progressTracker.update("Iniciando comparação...", 0);
    
    // Get source and target sheets
    progressTracker.update("Carregando planilhas...", 5);
    const sourceSheet = spreadsheet.getSheetByName(COMPARE_CONFIG.SOURCE_SHEET_NAME);
    const targetSheet = spreadsheet.getSheetByName(COMPARE_CONFIG.TARGET_SHEET_NAME);
    
    // Validate sheets exist
    if (!sourceSheet) {
      progressTracker.update("ERRO: Planilha fonte não encontrada", 100);
      throw new Error(`Planilha "${COMPARE_CONFIG.SOURCE_SHEET_NAME}" não encontrada. Execute o script search_llm_capabilities.gs primeiro.`);
    }
    
    if (!targetSheet) {
      progressTracker.update("ERRO: Planilha alvo não encontrada", 100);
      throw new Error(`Planilha "${COMPARE_CONFIG.TARGET_SHEET_NAME}" não encontrada.`);
    }
    
    // Create or clear report sheet
    progressTracker.update("Preparando planilha de relatório...", 10);
    const reportSheet = _prepareReportSheet(spreadsheet);
    
    // Get data from both sheets including cell backgrounds
    progressTracker.update("Carregando dados da planilha fonte...", 15);
    const sourceData = _getSheetDataWithFormatting(sourceSheet, progressTracker);
    
    progressTracker.update("Carregando dados da planilha alvo...", 30);
    const targetData = _getSheetDataWithFormatting(targetSheet, progressTracker);
    
    // Create lookup maps for faster comparison
    progressTracker.update("Criando mapas de busca para comparação rápida...", 45);
    const sourceMap = _createLookupMap(sourceData.rows, sourceData.backgrounds);
    const targetMap = _createLookupMap(targetData.rows, targetData.backgrounds);
    
    // Compare data and generate report
    progressTracker.update("Comparando dados...", 50);
    const discrepancies = _compareData(sourceData, targetData, sourceMap, targetMap, progressTracker);
    
    // Display report
    progressTracker.update("Gerando relatório...", 80);
    _displayReport(reportSheet, discrepancies, sourceData.headers, progressTracker);
    
    // Complete progress
    progressTracker.update("Comparação concluída!", 100);
    
    // Show completion message
    const message = discrepancies.length > 0 
      ? `Comparação concluída. Foram encontradas ${discrepancies.length} divergências de status.` 
      : "Comparação concluída. Nenhuma divergência de status encontrada!";
    
    SpreadsheetApp.getUi().alert("Resultado da Comparação", message, SpreadsheetApp.getUi().ButtonSet.OK);
    
  } catch (error) {
    SpreadsheetApp.getUi().alert("Erro: " + error.message);
  }
}

