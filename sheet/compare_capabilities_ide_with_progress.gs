/**
 * Creates a progress tracker in a separate sheet
 * @param {Object} spreadsheet - Spreadsheet object
 * @return {Object} Progress tracker object with update method
 * @private
 */
function _createProgressTracker(spreadsheet) {
  // Check if progress sheet already exists and delete it
  let progressSheet = spreadsheet.getSheetByName(COMPARE_CONFIG.PROGRESS_SHEET_NAME);
  if (progressSheet) {
    spreadsheet.deleteSheet(progressSheet);
  }
  
  // Create new progress sheet
  progressSheet = spreadsheet.insertSheet(COMPARE_CONFIG.PROGRESS_SHEET_NAME);
  
  // Set up progress sheet
  progressSheet.getRange("A1:B1").merge();
  progressSheet.getRange("A1").setValue("MONITORAMENTO DE PROGRESSO DA COMPARAÇÃO")
    .setFontWeight("bold")
    .setBackground(COMPARE_CONFIG.COLORS.TITLE_BG)
    .setFontColor(COMPARE_CONFIG.COLORS.TITLE_TEXT)
    .setHorizontalAlignment("center");
  
  progressSheet.getRange("A2").setValue("Status Atual:");
  progressSheet.getRange("A3").setValue("Progresso:");
  progressSheet.getRange("A4").setValue("Linha Atual:");
  progressSheet.getRange("A5").setValue("Coluna Atual:");
  progressSheet.getRange("A6").setValue("Tempo Decorrido:");
  
  progressSheet.getRange("B2:B6").setBackground(COMPARE_CONFIG.COLORS.PROGRESS_BG);
  
  // Create progress bar
  progressSheet.getRange("A8").setValue("Barra de Progresso:");
  progressSheet.getRange("A9:J9").setBorder(true, true, true, true, false, false);
  
  // Set column widths
  progressSheet.setColumnWidth(1, 150);
  progressSheet.setColumnWidth(2, 300);
  
  // Start timer
  const startTime = new Date();
  
  // Return progress tracker object
  return {
    update: function(status, percentComplete, currentRow, currentColumn) {
      // Update status
      progressSheet.getRange("B2").setValue(status);
      
      // Update progress percentage
      progressSheet.getRange("B3").setValue(Math.round(percentComplete) + "%");
      
      // Update current row and column if provided
      if (currentRow !== undefined) {
        progressSheet.getRange("B4").setValue(currentRow);
      }
      
      if (currentColumn !== undefined) {
        progressSheet.getRange("B5").setValue(currentColumn);
      }
      
      // Update elapsed time
      const currentTime = new Date();
      const elapsedSeconds = Math.floor((currentTime - startTime) / 1000);
      const minutes = Math.floor(elapsedSeconds / 60);
      const seconds = elapsedSeconds % 60;
      progressSheet.getRange("B6").setValue(`${minutes}m ${seconds}s`);
      
      // Update progress bar
      const filledCells = Math.floor(percentComplete / 10);
      for (let i = 0; i < 10; i++) {
        const cell = progressSheet.getRange(9, i + 1);
        if (i < filledCells) {
          cell.setBackground("#4285F4"); // Google blue
        } else {
          cell.setBackground("#FFFFFF");
        }
      }
      
      // Force the spreadsheet to update visually
      SpreadsheetApp.flush();
    }
  };
}

